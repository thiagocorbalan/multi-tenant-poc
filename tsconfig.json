{
  "compilerOptions": {
	"alwaysStrict": true,
	"moduleResolution":"node",
	"outDir": "./build",
	"rootDir": "./src",
	"sourceMap": true,
	"strictFunctionTypes": true,
	"strictNullChecks": true,
	"baseUrl": "./src",
	"esModuleInterop": true,
	"forceConsistentCasingInFileNames": true,
	"module": "ES2022",
	"removeComments": true,
	"noImplicitReturns": true,
	"emitDecoratorMetadata": true,
	"experimentalDecorators": true
  },
	"ts-node": {
		"esm": true,
		"compiler": "typescript"
	},
	"exclude": [
		"./node_modules/*",
		"build"
	],
}
