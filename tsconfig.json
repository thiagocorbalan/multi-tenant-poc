{
	"compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
		"strictPropertyInitialization": false,
		"noImplicitAny": false,
    "sourceMap": true,
		"outDir": "./dist/tsc/",
    "types": ["node"],
    "lib": ["ES6"]
	},
	"ts-node": {
		"esm": true,
		"compiler": "typescript",
		"files": true
	},
	"include": ["./src"],
	"files": ["./src/index.ts"],
  "exclude": ["node_modules"]
}
